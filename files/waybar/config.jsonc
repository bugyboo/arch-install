{
    "layer": "top",
    "position": "top",
    "height": 26,
    "modules-left": ["hyprland/workspaces", "hyprland/window"],
    "modules-center": ["clock"],
    "modules-right": ["hyprland/language", "pulseaudio", "network", "memory", "battery", "tray", "custom/power"],
    // Hyprland Workspaces
    "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "sort-by-number": true
    },
    // Current window title
    "hyprland/window": {
        "max-length": 50,
        "separate-outputs": true
    },
    // Clock
    "clock": {
    "format": "{:%A, %B %d, %I:%M:%S %p}",
    "tooltip-format": "<big>{:%B %d}</big>\n<tt>{calendar}</tt>",
	"interval": 1
    },
    // Language
    "hyprland/language": {
    	"format": "{}",
    	"format-en": "En",
    	"format-ar": "Ar",
    	"keyboard-name": "at-translated-set-2-keyboard"
    },
    // Audio
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-muted": "",
        "format-icons": {
            "default": ["", "🔉", "🔊"]
        },
        "on-click": "pavucontrol"
    },
    // Network
    "network": {
        "format-wifi": "{essid} ({signalStrength}%) 📶",
        "format-ethernet": "",
        "format-disconnected": "⚠",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}",
        "on-click": "nm-applet"
    },
    // Memory usage
    "memory": {
        "format": "{}% 🖥",
        "interval": 5,
        "tooltip-format": "Memory: {used:0.1f}G/{total:0.1f}G",
        "states": {
            "warning": 70,
            "critical": 90
        }
    },    
    // Battery (remove if not on a laptop)
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% ⚡",
        "format-icons": ["🪫", "🔋"]
    },
    // System tray
    "tray": {
        "icon-size": 16,
        "spacing": 10
    },
    "custom/power": {
        "format" : "⏻ ",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
		"menu-actions": {
			"shutdown": "shutdown",
			"reboot": "reboot",
			"suspend": "systemctl suspend",
			"hibernate": "systemctl hibernate"
		}
    }    
}
