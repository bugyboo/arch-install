        "format-muted": "ðŸ”‡",
        "format-icons": {
            "default": ["ðŸ”ˆ", "ðŸ”‰", "ðŸ”Š"]
        },
        "on-click": "pavucontrol"
    },
    // Network
    "network": {
        "format-wifi": "{essid} ({signalStrength}%) ðŸ“¶",
        "format-ethernet": "ðŸ–§",
        "format-disconnected": "âš ",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}",
        "on-click": "nm-applet"
    },
    // Memory usage
    "memory": {
        "format": "{}% ðŸ–¥",
        "interval": 5,
        "tooltip-format": "Memory: {used:0.1f}G/{total:0.1f}G",
        "states": {
            "warning": 70,
            "critical": 90
        }
    },    
    // Battery (remove if not on a laptop)
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% âš¡",
