{
    "layer": "top",
    "position": "top",
    "height": 26,
    "modules-left": ["hyprland/workspaces", "hyprland/window"],
    "modules-center": ["clock"],
    "modules-right": ["hyprland/language", "keyboard-state", "pulseaudio", "network", "memory", "battery", "tray"],
    // Hyprland Workspaces
    "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "sort-by-number": true
    },
    // Current window title
    "hyprland/window": {
        "max-length": 50,
        "separate-outputs": true
    },
    // Clock
    "clock": {
        "format": "{:%Y-%m-%d %H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt>{calendar}</tt>"
    },
    // Language
    "hyprland/language": {
    	"format": "{}",
    	"format-en": "En",
    	"format-ar": "Ar",
    	"keyboard-name": "at-translated-set-2-keyboard"
    },
    // Keyboard layout indicator
    "keyboard-state": {
        "format": "{name}", // Displays layout name (e.g., "us", "fr")
        "format-icons": {
            "us": "ðŸ‡ºðŸ‡¸",
            "ar": "ðŸ‡«ðŸ‡·"
        },
        "tooltip-format": "Layout: {name}"
    },
    // Audio
    "pulseaudio": {
